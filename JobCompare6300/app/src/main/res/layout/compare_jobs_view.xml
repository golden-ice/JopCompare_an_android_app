<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompareJobsView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/compareViewTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#8CB160"
            android:ems="10"
            android:text="Compare Offers"
            android:textAlignment="center"
            android:textColor="#FDFDFD"
            android:textSize="24sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/compareJobOfferTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/compareViewJobListText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:text="Your Job Offers"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="#CAC8C8"
                android:textSize="20sp" />
        </LinearLayout>


        <ListView
            android:id="@+id/jobList"
            android:layout_width="match_parent"
            android:layout_height="535dp"
            android:choiceMode="multipleChoice" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/compareExitButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:text="Back" />

            <Button
                android:id="@+id/compareNewComparisonButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:text="Compare" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/compareLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/compareViewCompareResultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#97BA6E"
                android:ems="10"
                android:text="Comparison Results"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/compareTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="gone">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="9">

                <TextView
                    android:id="@+id/compareTableTopBlank"
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="#764AB5"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/compareTableTopOffer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="#764AB5"
                    android:ems="10"
                    android:text="Offer 1"
                    android:textAlignment="center"
                    android:textColor="#EEE7F3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/compareTableTopOffer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="#764AB5"
                    android:ems="10"
                    android:text="Offer 2"
                    android:textAlignment="center"
                    android:textColor="#FFEEE7F3"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="9">

                <TextView
                    android:id="@+id/compareTableTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#E3E0E0"
                    android:textStyle="bold"
                    android:text="Title" />

                <TextView
                    android:id="@+id/compareTableTitleOffer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#EFE5F6"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/compareTableTitleOffer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#EFE5F6"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="9">

                <TextView
                    android:id="@+id/compareCompanyNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#E3E0E0"
                    android:textStyle="bold"
                    android:text="Company Name" />

                <TextView
                    android:id="@+id/compareCompanyNameOffer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#EFE5F6"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/compareCompanyNameOffer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#EFE5F6"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="9">

                <TextView
                    android:id="@+id/compareLocation1Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#E3E0E0"
                    android:textStyle="bold"
                    android:text="Location State" />

                <TextView
                    android:id="@+id/compareLocation1Offer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#EFE5F6"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/compareLocation1Offer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#EFE5F6"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="9">

                <TextView
                    android:id="@+id/compareLocation2Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#E3E0E0"
                    android:textStyle="bold"
                    android:text="Location City" />

                <TextView
                    android:id="@+id/compareLocation2Offer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#EFE5F6"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/compareLocation2Offer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#EFE5F6"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="9">

                <TextView
                    android:id="@+id/compareSalaryAdjustedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#E3E0E0"
                    android:textStyle="bold"
                    android:text="Adjusted Yearly Salary" />

                <TextView
                    android:id="@+id/compareSalaryAdjustedOffer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#EFE5F6"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/compareSalaryAdjustedOffer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#EFE5F6"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="9">

                <TextView
                    android:id="@+id/compareBonusAdjustedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#E3E0E0"
                    android:textStyle="bold"
                    android:text="Adjusted Yearly Bonus" />

                <TextView
                    android:id="@+id/compareBonusAdjustedOffer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#EFE5F6"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/compareBonusAdjustedOffer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#EFE5F6"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="9">

                <TextView
                    android:id="@+id/compareRetireBenefitText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#E3E0E0"
                    android:textStyle="bold"
                    android:text="Retirement Benefits"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/compareRetireBenefitOffer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#EFE5F6"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/compareRetireBenefitOffer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#EFE5F6"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="9">

                <TextView
                    android:id="@+id/compareRelocationStipendText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#E3E0E0"
                    android:textStyle="bold"
                    android:text="Relocation Stipend"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/compareRelocationStipendOffer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#EFE5F6"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/compareRelocationStipendOffer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#EFE5F6"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="9">

                <TextView
                    android:id="@+id/compareRSUAwardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#E3E0E0"
                    android:textStyle="bold"
                    android:text="RSU Award" />

                <TextView
                    android:id="@+id/compareRSUAwardOffer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#EFE5F6"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/compareRSUAwardOffer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:background="#EFE5F6"
                    android:textAlignment="center"/>
            </TableRow>

        </TableLayout>

    </LinearLayout>
</ScrollView>